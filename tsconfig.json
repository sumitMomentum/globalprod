{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
      // "@/components/*": ["components/*"],
      // "@/pages/*": ["pages/*"],
    }
    // "plugins": [
    //   {
    //     "name": "next"
    //   }
    // ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/auth/Signup.tsx",
    "src/context/AccountContext.tsx",
    "src/pages/dashboard/[content]",
    "src/pages/dashboard/profile",
    "src/components/dashboard/vehicle-components/AvgDailyMilesDriven.jsx"
  ],
  "exclude": ["node_modules"]
}
